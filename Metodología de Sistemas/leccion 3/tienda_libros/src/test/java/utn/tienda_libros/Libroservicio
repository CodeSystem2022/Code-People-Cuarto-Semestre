package unt.tienda_libros.servicio;

@Service 
public class LibroServicio  implements iLibroServicio {
    
    @Autowired

    private LibroReposotorio libroReposotorio;


    @Override

    public List <Libro> listarLibros (){
        return libroReposotorio.findAll();
    }

    @Override 
    public Libro buscarLibroPorId(Integer idLibro){
       Libro libro =libroReposotorio.findById(idLibro).orElse(null);        
    return libro;
    }
    @Override
    public void guardarLibro ( Libro libro){
       libroReposotorio(libro);
    }
    @Override
    public void eliminarLibro (Libro libro){
        libroReposotorio.delete(Libro);
    }
}